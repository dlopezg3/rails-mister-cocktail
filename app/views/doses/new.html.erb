<div class="container">
<h1> Add a dose to <%=  @cocktail.name %> </h1>

  <div class="row">
    <%= simple_form_for ([@cocktail, @dose]) do |f| %>
      <%= f.association :ingredient %>
      <%= f.input :description %>
      <%= f.submit "create cocktail", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
