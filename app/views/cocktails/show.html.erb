<div class="container">
  <h1> <%= @cocktail.name %> </h1>

  <% @cocktail.doses.each do |i| %>
    <div class="row">
      <div class="col-xs-2">
        <p> <%= i.ingredient.name %> </p>
      </div>
      <div class="col-xs-2">
        <p> <%= i.description %> </p>
      </div>
      <div class="col-xs-2">
       <%= link_to "Delete", dose_path(i), method: :delete %>
      </div>
  </div>
  <% end  %>
  <p> <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %> </p>

</div>
